<Window x:Class="Forums.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forums"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="768"
        Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <TextBlock Name="ForumNameTextBlock"
                   Grid.Row="1"
                   Grid.Column="7"
                   Grid.RowSpan="3"
                   Grid.ColumnSpan="6"
                   Text="Food Forum"
                   FontWeight="ExtraBold"
                   FontFamily="Berlin Sans FB Demi"
                   FontSize="55"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap" />
        <Button Name="SignUpButton"
                Grid.Column="16"
                Grid.Row="1"
                Content="Sign Up"
                Style="{StaticResource SignUpButton}"
                Click="SignUpButton_Click" />
        <Button Name="LoginButton"
                Grid.Column="16"
                Grid.Row="2"
                Content="Login"
                Style="{StaticResource SignUpButton}"
                Click="LoginButton_Click" />
        <TextBlock Text="Hello, "
                   Grid.Column="2"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Style="{StaticResource HelloUserText}" />
        <TextBlock Name="UsernameTextBlock"
                   Grid.Column="3"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Text=""
                   Style="{StaticResource HelloUserText}" />
        <Grid Grid.Column="4"
              Grid.Row="6"
              Grid.ColumnSpan="12"
              Grid.RowSpan="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Horizontal"
                            Name="AllSubForumsStackPanel">
                </StackPanel>
            </ScrollViewer>
            <DataGrid Name="SubForumDataGrid"
                      Visibility="Hidden"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserSortColumns="True"
                      SelectionMode="Single"
                      ItemsSource="{Binding DiscussionMessages}" />
        </Grid>
        <Button Name="CreateDiscussionButton"
                Grid.Column="4"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Content="Open New Discussion"
                Visibility="{Binding NewDiscussionButtonVisibility}" />
        <Button Name="CreateSubForumButton"
                Grid.Column="9"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Content="Open New Sub Forum"
                Visibility="{Binding NewSubForumButtonVisibility}" />
    </Grid>
</Window>