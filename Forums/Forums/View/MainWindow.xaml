<Window x:Class="Forums.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forums"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="768"
        Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        DataContext="{Binding RelativeSource={RelativeSource Self}, Path=CurrentForum}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <TextBlock Name="ForumNameTextBlock"
                   Grid.Row="1"
                   Grid.Column="7"
                   Grid.RowSpan="3"
                   Grid.ColumnSpan="6"
                   Text="Food Forum"
                   FontWeight="ExtraBold"
                   FontFamily="Berlin Sans FB Demi"
                   FontSize="55"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap" />
        <Button Name="SignUpButton"
                Grid.Column="16"
                Grid.Row="1"
                Content="Sign Up"
                Style="{StaticResource SignUpButton}"
                Click="SignUpButton_Click" />
        <Button Name="LoginButton"
                Grid.Column="16"
                Grid.Row="2"
                Content="Login"
                Style="{StaticResource SignUpButton}"
                Click="LoginButton_Click" />
        <TextBlock Text="Hello, "
                   Grid.Column="2"
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Style="{StaticResource HelloUserText}" />
        <TextBlock Name="UsernameTextBlock"
                   Grid.Column="3"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource HelloUserText}" />
        <ListView Name="SubForumsListView"
                  Grid.Column="7"
                  Grid.Row="6"
                  Grid.ColumnSpan="6"
                  Grid.RowSpan="12"
                  ItemsSource="{Binding SubForums}"
                  BorderThickness="0"
                  HorizontalAlignment="Center"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True"
                  Cursor="Hand">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown"
                                 Handler="SubForumsListView_PreviewMouseLeftButtonDown" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <ListView Name="DiscussionsListView"
                  Visibility="Hidden"
                  Grid.Column="7"
                  Grid.Row="6"
                  Grid.ColumnSpan="6"
                  Grid.RowSpan="12"
                  ItemsSource="{Binding SubForums}"
                  BorderThickness="0"
                  HorizontalAlignment="Center"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.CanContentScroll="True"
                  Cursor="Hand">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown"
                                 Handler="DiscussionsListView_PreviewMouseLeftButtonDown" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button Name="CreateDiscussionButton"
                Grid.Column="7"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Content="Open New Discussion" />
        <Button Name="CreateSubForumButton"
                Grid.Column="11"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Content="Open New Sub Forum" />
    </Grid>
</Window>